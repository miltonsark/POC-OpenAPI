{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "CommonJS",                            
    "rootDir": "./",                                
    "outDir": "./dist",                              
    "strict": true,                                  
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,
    "resolveJsonModule": true                           
  },
  "include": ["**/*.ts"],                           
  "exclude": ["node_modules"]                       
}
